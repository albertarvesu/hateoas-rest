{
  "name": "hateoas-rest",
  "version": "0.0.1",
  "description": "Hateoas Driven Restful Api",
  "main": "./dist/index.js",
  "author": "albertarvesu<albertarvesu@gmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build": "tsc",
    "dev": "nodemon",
    "start": "forever start ./dist/index.js",
    "prod": "npm run build && npm run start",
    "seed": "ts-node ./src/seeder.ts",
    "test": "mocha",
    "test:coverage": "nyc mocha",
    "test:codecov": "yarn test:coverage && nyc report --reporter=text-lcov > coverage.lcov",
    "lint:ts": "tslint -c tslint.json -p .",
    "lint:ts:fix": "tslint --fix -c tslint.json -p ."
  },
  "dependencies": {
    "bcrypt": "^3.0.0",
    "body-parser": "^1.18.3",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "faker": "^4.1.0",
    "forever": "^0.15.3",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^5.7.5",
    "nodemon": "^1.18.3",
    "ts-node": "^7.0.0",
    "typescript": "^3.0.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^2.0.0",
    "@types/chai": "^4.1.4",
    "@types/chai-http": "^3.0.5",
    "@types/dotenv": "^4.0.3",
    "@types/express": "^4.16.0",
    "@types/faker": "^4.1.3",
    "@types/jsonwebtoken": "^7.2.8",
    "@types/mocha": "^5.2.5",
    "@types/mongoose": "^5.2.3",
    "chai": "^4.1.2",
    "chai-http": "^4.0.0",
    "cors": "^2.8.4",
    "mocha": "^5.2.0",
    "mockgoose": "^7.3.5",
    "nyc": "^12.0.2",
    "source-map-support": "^0.5.8",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.9.2",
    "tslint-config-prettier": "^1.14.0",
    "tslint-immutable": "^4.6.0"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "require": [
      "ts-node/register",
      "source-map-support/register"
    ],
    "exclude": [
      "src/**/*.d.ts",
      "src/**/*.spec.ts"
    ],
    "reporter": [
      "html",
      "text"
    ],
    "check-coverage": "--lines 50 --per-file",
    "all": false,
    "sourceMap": false,
    "instrument": true
  },
  "engines": {
    "node": ">=8.11.3"
  }
}
